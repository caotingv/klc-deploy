---
apiVersion: batch/v1
kind: Job
metadata:
  labels:
    app: openpitrix
    component: openpitrix-import-job
    version: v3.2.0
  name: openpitrix-import-job
  namespace: {{ helm_install_namespace }}
spec:
  backoffLimit: 100
  template:
    metadata:
      labels:
        app: openpitrix
        component: openpitrix-import-job
        version: v3.2.0
    spec:
      serviceAccountName: klc
      restartPolicy: OnFailure
      initContainers:
        - name: wait-apiserver
          image: {{ kube_image_repository }}/openpitrix-jobs:{{ kube_image_tag }}
          imagePullPolicy: IfNotPresent
          command: ['sh', '-c', 'until nc -z ks-apiserver.{{ helm_install_namespace }}.svc 80; do echo "waiting for apiserver"; sleep 2; done;']
      containers:
        - name: import
          command:
            - import-app
            - import
          image: {{ kube_image_repository }}/openpitrix-jobs:{{ kube_image_tag }}
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - mountPath: /etc/kubesphere
              name: klc-config
      volumes:
        - name: klc-config
          configMap:
            name: klc-config